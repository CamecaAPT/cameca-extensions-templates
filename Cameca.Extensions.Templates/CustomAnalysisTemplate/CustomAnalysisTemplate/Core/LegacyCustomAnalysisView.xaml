                <!--     <controls:Histogram2D DataSource="{Binding RenderData}" -->
                <!--                           AxisXLabel="{Binding XAxis}" -->
                <!--                           AxisYLabel="{Binding YAxis}" /> -->
                <!-- </DataTemplate> -->
                <!-- <DataTemplate DataType="{x:Type legacy:TableTabViewModel}"> -->
                <!--     <controls:Table ItemsSource="{Binding Items}" -->
                <!--                     AutoWidth="True" /> -->
                <!-- </DataTemplate> -->
                <!-- <DataTemplate DataType="{x:Type legacy:TextTabViewModel}"> -->
                <!--     <TextBlock Text="{Binding Content, Mode=OneWay}" -->
                <!--                VerticalAlignment="Top"  -->
                <!--                HorizontalAlignment="Left"  -->
                <!--                TextWrapping="WrapWithOverflow" /> -->
                <!-- </DataTemplate> -->
            </TabControl.Resources>
        </TabControl>
    </Grid>
</UserControl>
